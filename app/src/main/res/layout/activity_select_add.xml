<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chandan.projectfinal.SelectAddActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/faculty"
        android:text="@string/Faculty"
        android:drawableTop="@drawable/faculty"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/student"
        android:layout_alignLeft="@+id/student"
        android:layout_alignStart="@+id/student" />
    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/student"
        android:text="@string/student"
        android:drawableTop="@drawable/student"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="101dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="74dp" />


</RelativeLayout>
